<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <TextView
        style="@style/Title.Medium"
        android:id="@+id/tv_title_ops"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/neutral_800"
        android:text="Oops"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        style="@style/Body.Medium"
        android:id="@+id/tv_detail_ops"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="You still need to complete your profile. Please complete it first!"
        app:layout_constraintEnd_toEndOf="@+id/tv_title_ops"
        app:layout_constraintStart_toStartOf="@+id/tv_title_ops"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_ops" />

    <Button
        android:id="@+id/btn_create_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button"
        android:text="Create Profile"
        app:layout_constraintEnd_toEndOf="@+id/tv_detail_ops"
        app:layout_constraintStart_toStartOf="@+id/tv_detail_ops"
        app:layout_constraintTop_toBottomOf="@+id/tv_detail_ops" />
</androidx.constraintlayout.widget.ConstraintLayout>